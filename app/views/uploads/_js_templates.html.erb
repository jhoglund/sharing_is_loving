<script id="template-upload" type="text/x-tmpl">
{% for (var i=0, file; file=o.files[i]; i++) { %}
    <div class="template-upload fade hero-unit">
			<table class="upload-table table">
				<tbody>
					<tr>
		        <td class="preview"><span class="fade"></span></td>
						<td>
							<p><input name="item[name]" placeholder="Name">
							<p><textarea name="item[description]" placeholder="Description" rows="2"></textarea>
							<p><input name="item[tag_list]" placeholder="Tags">
						</td>
						<td>
			        {% if (file.error) { %}
			            <div class="error" colspan="2"><span class="label label-important">Error</span> {%=file.error%}</div>
			        {% } else if (o.files.valid && !i) { %}
			            <div class="progress progress-success progress-striped active" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="0"><div class="bar" style="width:0%;"></div></div>
			        {% } %}
			        <div class="name">File: <b><span>{%=file.name%}</span></b></div>
			        <div class="size">Size: <b><span>{%=o.formatFileSize(file.size)%}</span></b></div>
							{% if (o.files.valid && !i) { %}
			            <td class="start">{% if (!o.options.autoUpload) { %}
			                <button class="btn btn-primary">
			                    <i class="icon-upload icon-white"></i>
			                    <span>Start</span>
			                </button>
			            {% } %}</td>
			        {% } %}
			        
					    <td class="cancel">{% if (!i) { %}
			            <button class="btn btn-warning">
			                <i class="icon-ban-circle icon-white"></i>
			                <span>Cancel</span>
			            </button>
			        {% } %}</td>
						</td>
		    </tr>
		  </tbody>
	  </table>
	</div>
{% } %}
</script>

